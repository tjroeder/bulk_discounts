<h1>Create New Item</h1>

<%= form_with url: "/merchants/#{@merchant.id}/items", method: :post, local: true do |f|%>
  <%= f.label "Name:" %>
  <%= f.text_field :name %>

  <%= f.label "Description:" %>
  <%= f.text_field :description %>

  <%= f.label "Current Selling Price:" %>
  <%= f.text_field :unit_price %>

  <%= f.hidden_field :merchant_id %>
  <%= hidden_field_tag :merchant_id, "#{@merchant.id}" %>

  <%= f.submit 'Create'%>

<% end %>
